<UserControl x:Class="Pinterest.OtherUserProfileWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Pinterest"
             Height="600" Width="800">

    <UserControl.Resources>
        <!-- Стиль для кнопки -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#00497A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCC"/>
                                <Setter Property="Foreground" Value="#888"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для заголовков TextBlock -->
        <Style x:Key="HeaderTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="#222"/>
        </Style>

        <!-- Стиль для больших заголовков -->
        <Style x:Key="MainTitleTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#111"/>
        </Style>

        <!-- Стиль для Image -->
        <Style x:Key="GalleryImageStyle" TargetType="Image">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="150"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="Stretch" Value="UniformToFill"/>
        </Style>

        <!-- Стиль для ComboBox -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#222"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Content="Назад"
                    Command="{Binding BackCommand}"
                    Style="{StaticResource BackButtonStyle}"/>
            <TextBlock Text="{Binding WelcomeMessage}"
                       Style="{StaticResource MainTitleTextBlockStyle}"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel>

                <!-- Изображения пользователя -->
                <TextBlock Text="Изображения пользователя" Style="{StaticResource HeaderTextBlockStyle}"/>
                <ItemsControl ItemsSource="{Binding UserUploadedImages}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding MetaData.ImageSource}"
                                   MouseLeftButtonUp="Image_MouseLeftButtonUp"
                                   Style="{StaticResource GalleryImageStyle}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Сохранённые изображения -->
                <TextBlock Text="Сохранённые изображения пользователя" Style="{StaticResource HeaderTextBlockStyle}" Margin="20,20,0,10"/>
                <ItemsControl ItemsSource="{Binding SavedImages}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding MetaData.ImageSource}"
                                   MouseLeftButtonUp="Image_MouseLeftButtonUp"
                                   Style="{StaticResource GalleryImageStyle}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Коллекции пользователя (только для просмотра) -->
                <GroupBox Header="Коллекции пользователя" Margin="10">
                    <StackPanel>

                        <!-- Выбор коллекции -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Выберите коллекцию:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox ItemsSource="{Binding UserCollections}"
                                      SelectedItem="{Binding SelectedCollectionName}"
                                      Style="{StaticResource ComboBoxStyle}" />
                        </StackPanel>

                        <!-- Просмотр содержимого выбранной коллекции -->
                        <ItemsControl ItemsSource="{Binding SelectedCollectionImages}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding MetaData.ImageSource}"
                                           MouseLeftButtonUp="Image_MouseLeftButtonUp"
                                           Style="{StaticResource GalleryImageStyle}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
