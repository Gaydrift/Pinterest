<UserControl x:Class="Pinterest.SubscriptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Pinterest">
    <UserControl.Resources>
        <local:ImagePathConverter x:Key="ImagePathConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding PremiumImages}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="10"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            CornerRadius="10"
                            Background="White"
                            HorizontalAlignment="Center"
                            MaxWidth="400">
                        <StackPanel>
                            <!-- Имя автора -->
                            <TextBlock Text="{Binding UploadedBy}"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Foreground="Gray"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,5"/>

                            <!-- Изображение -->
                            <Image Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   Source="{Binding FileName, Converter={StaticResource ImagePathConverter}}"
                                   Cursor="Hand">
                                <Image.InputBindings>
                                    <MouseBinding MouseAction="LeftClick"
                                                  Command="{Binding DataContext.OpenImageCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                  CommandParameter="{Binding}"/>
                                </Image.InputBindings>
                            </Image>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
