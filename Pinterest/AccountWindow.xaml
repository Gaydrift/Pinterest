<UserControl x:Class="Pinterest.AccountControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Pinterest"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Background="White">

    <UserControl.DataContext>
        <local:AccountControlViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <Style x:Key="LanguageComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ComboBox Style="{StaticResource LanguageComboBoxStyle}" SelectionChanged="LanguageComboBox_SelectionChanged">
            <ComboBoxItem Tag="ru" Content="🌐 Русский" IsSelected="True"/>
            <ComboBoxItem Tag="en" Content="🌐 English"/>
        </ComboBox>


        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <TextBlock Text="{DynamicResource Register}" FontSize="24" FontWeight="Bold" Margin="0 0 0 20" Foreground="#333" />

            <TextBlock Text="{DynamicResource Name}"/>
            <TextBox Text="{Binding Name}" Margin="0 5" Padding="10"  />

            <TextBlock Text="{DynamicResource Email}"/>
            <TextBox Text="{Binding Email}" Margin="0 5" Padding="10"  />

            <TextBlock Text="{DynamicResource Password}"/>
            <PasswordBox Margin="0 5" Padding="10" PasswordChanged="RegisterPasswordBox_PasswordChanged" />

            <TextBlock Text="{DynamicResource RepeatPassword}"/>
            <PasswordBox Margin="0 5" Padding="10" PasswordChanged="ConfirmPasswordBox_PasswordChanged" />

            <TextBlock Text="{DynamicResource Role}"/>
            <ComboBox SelectedValue="{Binding Role}" SelectedValuePath="Content" Margin="0 5" Padding="8">
                <ComboBoxItem Content="{DynamicResource User}" />
                <ComboBoxItem Content="{DynamicResource Admin}" />
            </ComboBox>

            <Button Content="{DynamicResource RegisterButton}" Command="{Binding RegisterCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Background="#007ACC" Foreground="White" Margin="0 10" Padding="10"
                    FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>

        <StackPanel Grid.Column="2" VerticalAlignment="Center">
            <TextBlock Text="{DynamicResource Login}" FontSize="24" FontWeight="Bold" Margin="0 0 0 20" Foreground="#333" />

            <TextBlock Text="{DynamicResource Email}"/>
            <TextBox Text="{Binding LoginEmail}" Margin="0 5" Padding="10"  />

            <TextBlock Text="{DynamicResource Password}"/>
            <PasswordBox Margin="0 5" Padding="10" PasswordChanged="LoginPasswordBox_PasswordChanged" />

            <Button Content="{DynamicResource LoginButton}" Command="{Binding LoginCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Background="#28A745" Foreground="White" Margin="0 10" Padding="10"
                    FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</UserControl>
