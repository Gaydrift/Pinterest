<UserControl x:Class="Pinterest.UserProfileWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Pinterest"
             Height="600" Width="800">
    <UserControl.DataContext>
        <local:UserProfileViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <local:NullOrEmptyToBoolConverter x:Key="NullOrEmptyToBoolConverter"/>

        <!-- Стиль для кнопок -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="6,3" />
            <Setter Property="Margin" Value="5,0,0,0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#00497A" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCC" />
                                <Setter Property="Foreground" Value="#888" />
                                <Setter Property="Cursor" Value="Arrow" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для TextBox -->
        <Style x:Key="MainTextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,10,0" />
            <Setter Property="Padding" Value="6,3" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderBrush" Value="#CCC" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#333" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Height" Value="28" />
            <Setter Property="MinWidth" Value="150" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer Margin="0"
                                          x:Name="PART_ContentHost" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC" />
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#005A9E" />
                                <Setter Property="Background" Value="#F0F8FF" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#EEE" />
                                <Setter Property="Foreground" Value="#999" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для заголовков TextBlock -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,10,0,5" />
            <Setter Property="Foreground" Value="#222" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding WelcomeMessage}" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,20">
                    <!-- Раздел: Загруженные изображения -->
                    <GroupBox Header="Ваши изображения" Margin="0,10">
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding UserUploadedImages}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="10">
                                            <Image Source="{Binding MetaData.ImageSource}"
                                           Width="150" Height="150"
                                           Cursor="Hand"
                                           MouseLeftButtonUp="Image_MouseLeftButtonUp"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>

                    <!-- Раздел: Сохранённые изображения -->
                    <GroupBox Header="Сохранённые изображения" Margin="0,10">
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding SavedImages}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="10">
                                            <Image Source="{Binding MetaData.ImageSource}"
                                           Width="150" Height="150"
                                           Cursor="Hand"
                                           MouseLeftButtonUp="Image_MouseLeftButtonUp"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>
                </StackPanel>

                <!-- Раздел: Коллекции -->
                <GroupBox Header="Мои коллекции" Margin="0,0,0,10" DockPanel.Dock="Bottom">
                    <StackPanel>
                        <!-- Выбор и удаление коллекции -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Выберите коллекцию:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Width="200"
                              ItemsSource="{Binding UserCollections}"
                              SelectedItem="{Binding SelectedCollectionName}" />
                            <Button Content="Удалить"
                            Style="{StaticResource MainButtonStyle}"
                            Command="{Binding DeleteCollectionCommand}"
                            IsEnabled="{Binding SelectedCollectionName, Converter={StaticResource NullOrEmptyToBoolConverter}}" />
                        </StackPanel>

                        <!-- Просмотр содержимого выбранной коллекции -->
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Height="200">
                            <ItemsControl ItemsSource="{Binding SelectedCollectionImages}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="10">
                                            <Image Source="{Binding MetaData.ImageSource}"
                                           Width="150" Height="150"
                                           Cursor="Hand"
                                           MouseLeftButtonUp="Image_MouseLeftButtonUp"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Добавление в коллекцию -->
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBox x:Name="NewCollectionNameTextBox"
                             Width="150"
                             Style="{StaticResource MainTextBoxStyle}"
                             Text="Новая коллекция" />
                            <Button Content="Добавить в коллекцию"
                            Style="{StaticResource MainButtonStyle}"
                            Command="{Binding AddToCollectionCommand}"
                            CommandParameter="{Binding Text, ElementName=NewCollectionNameTextBox}" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </DockPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
